# Supabase — project URL and public anonymous key
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url-here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Supabase — server-side only, never expose to the browser
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# App — used for OAuth redirect URLs and email links
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Resend — email service
RESEND_API_KEY=your-resend-api-key-here
EMAIL_FROM=QC <noreply@yourdomain.com>

# Cron — authenticates Vercel cron requests
CRON_SECRET=your-cron-secret-here

# Access control — comma-separated list of allowed emails (leave unset to allow all)
ALLOWED_EMAILS=
NEXT_PUBLIC_ALLOWED_EMAILS=
