# Supabase — project URL and public anonymous key
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url-here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Supabase — server-side only, never expose to the browser
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# App — used for OAuth redirect URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Resend — email service
RESEND_API_KEY=your-resend-api-key-here
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Stripe — payment processing
STRIPE_SECRET_KEY=your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret-here
STRIPE_PRO_MONTHLY_PRICE_ID=your-stripe-pro-monthly-price-id-here
STRIPE_PRO_YEARLY_PRICE_ID=your-stripe-pro-yearly-price-id-here
NEXT_PUBLIC_STRIPE_PRO_MONTHLY_PRICE_ID=your-stripe-pro-monthly-price-id-here
NEXT_PUBLIC_STRIPE_PRO_YEARLY_PRICE_ID=your-stripe-pro-yearly-price-id-here

# Cron — authenticates Vercel cron requests
CRON_SECRET=your-cron-secret-here
