{
  "project": ["src/**/*.{ts,tsx}"],
  "entry": ["src/app/**/page.tsx", "src/app/**/layout.tsx", "src/app/**/route.ts", "src/app/providers.tsx"],
  "vitest": {
    "entry": ["src/test/**/*.ts", "**/*.test.ts"]
  },
  "ignoreDependencies": [
    "@capacitor/*",
    "postcss",
    "tailwindcss",
    "tailwindcss-animate",
    "eslint-config-next",
    "@eslint/js",
    "zustand"
  ],
  "ignoreBinaries": ["doppler"],
  "exclude": ["types", "enumMembers"],
  "ignoreExportsUsedInFile": true,
  "ignore": [
    "src/components/ui/LongPressMenu.tsx",
    "src/components/ui/LongPressMenuHook.tsx",
    "src/components/ui/MobileInput.tsx",
    "src/components/ui/MobileSheet.tsx",
    "src/components/ui/MobileSheetParts.tsx",
    "src/components/ui/PrimaryActionFAB.tsx",
    "src/components/ui/PullToRefresh.tsx",
    "src/components/ui/SwipeGestures.tsx",
    "src/components/ui/SwipeGesturesHook.tsx",
    "src/components/ui/TouchButton.tsx",
    "src/lib/haptics.ts",
    "src/lib/touch-interactions.ts",
    "src/lib/stripe/client.ts"
  ]
}
